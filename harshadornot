import java.util.*;
class harshad                                                     
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int n;
System.out.println("Enter number");
n=sc.nextInt();
System.out.println("harshad number");
int m;
m=n;
int r;
int sum=0;

while(n!=0)
{
r = n%10;
sum=sum+r;
n=n/10;
}

if(m%sum==0){
System.out.println("harshad number");
}
else{
System.out.println("Not a harshad number");
}
}
}

